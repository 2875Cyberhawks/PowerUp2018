package org.usfirst.frc.team2875.robot.subsystems;

import org.usfirst.frc.team2875.robot.Robot;

import edu.wpi.first.wpilibj.command.Subsystem;

public class Driving extends Subsystem{

	public Driving() {
	
	}
	
	public void drive(double forward, double left, double right, double strafe) {
		double speedL1 = forward;
		double speedR1 = forward;
		double speedL2 = forward;
		double speedR2 = forward;
		speedL1 -= left;
		speedL2 -= left;
		speedR1 -= right;
		speedR2 -= right;
		
		//depends on which way the XBox contr. works
		speedL1 -= strafe;
		speedL2 += strafe;
		speedR1 += strafe;
		speedR2 -= strafe;
		Robot.gearBox.setSpeed(1,speedL1);
		Robot.gearBox.setSpeed(2, speedL2);
		Robot.gearBox.setSpeed(3,speedR1);
		Robot.gearBox.setSpeed(4, speedR2);
	
}
public void stop() {
		Robot.gearBox.stop();
	}

@Override
protected void initDefaultCommand() {
	// TODO Auto-generated method stub
}
	
}
